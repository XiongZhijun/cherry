<resources>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:buttonStyleSmall">@style/ButtonSmallStyle</item>
        <item name="android:buttonStyleInset">@style/ButtonInsetStyle</item>
        <item name="android:windowBackground">@color/WindowBackground</item>
        <item name="android:windowTitleSize">@dimen/WindowTitleSize</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
    </style>

    <style name="ButtonSmallStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonInsetStyle" parent="@android:style/Widget.Button.Inset">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="ActionBarTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarTextColor</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:background">@drawable/actionbar_button</item>
    </style>

</resources>